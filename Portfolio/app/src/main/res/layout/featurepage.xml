<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-38dp"
        android:id="@+id/pass"
        android:textColor="#fff"
        android:textSize="28dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have A Look At My.."
        android:textSize="25dp"
        android:id="@+id/subtitle"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Profile"
        android:textAllCaps="false"
        android:onClick="Profile"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:id="@+id/profile"
        android:textSize="20dp"
        android:background="#FCB711"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=" Qualification"
        android:textAllCaps="false"
        android:id="@+id/qualification"
        android:onClick="Eduqua"
        android:layout_marginLeft="160dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#F37021"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Skills"
        android:textAllCaps="false"
        android:id="@+id/skill"
        android:onClick="Skill"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#CC004C"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Courses Covered"
        android:textAllCaps="false"
        android:id="@+id/course"
        android:onClick="CoursesCompleted"
        android:layout_marginLeft="160dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#6470AA"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Projects"
        android:id="@+id/projects"
        android:textAllCaps="false"
        android:onClick="Projects"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#0089D0"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PORs"
        android:id="@+id/pors"
        android:textAllCaps="false"
        android:onClick="PORs"
        android:layout_marginLeft="160dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="#0DB14B"/>


</LinearLayout>